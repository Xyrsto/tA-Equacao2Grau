@{
    //nesta zona escrevemos código C#
    ViewData["Title"] = "Eq segundo grau";

    string resposta = "";

    if (!string.IsNullOrEmpty(ViewBag.x1))
    {
        resposta = "As soluções da equação são: x1 = " + ViewBag.x1 + "; x2= " + ViewBag.x2;
    }
}

<!--nesta zona vamos escrever HTML-->
